{
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx",
                "*.css",
                "*.scss",
                "*.json"
            ],
            "options": { "tabWidth": 4, "useTabs": false }
        },
        {
            "files": ["*.md"],
            "options": { "tabWidth": 2, "useTabs": false, "singleQuote": false }
        }
    ]
}
